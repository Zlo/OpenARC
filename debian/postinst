#!/bin/sh
set -e

# Create the openarc user/group if they don't exist
if [ "$1" = "configure" ]; then
    if ! getent passwd openarc > /dev/null; then
        adduser --system --group --no-create-home \
                --home /var/lib/openarc openarc
    fi

    # Set permissions for the state directory
    mkdir -p /var/lib/openarc
    chown openarc:openarc /var/lib/openarc
    chmod 0750 /var/lib/openarc

    # Ensure the config directory exists
    mkdir -p /etc/openarc
fi

#DEBHELPER#

exit 0
